generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:newrootpassword@127.0.0.1:3306/api"
}

model User {
  id        String   @id @default(cuid())
  name      String
  password  String
  email     String   @unique
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tournament {
  id                      Int      @id @default(autoincrement())
  name                    String
  description             String
  no_of_courts            Int
  country                 String
  city                    String
  address_additional_info String?
  address_name            String
  start_date              DateTime
  end_date                DateTime
  gender                  String   @default("any")
}
